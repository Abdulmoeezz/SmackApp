<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.LoginActivity">




<EditText android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_25sdp"
            android:id="@+id/UserEmail"
          android:inputType="text"
            android:hint="Enter Your Email_"/>




    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/UserPassword"
              android:inputType="textPassword"
              android:layout_below="@id/UserEmail"
              android:hint="Enter Your Password_"/>






    <Button android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:id="@+id/UserLogIn"
            android:text="LogIN"
            android:layout_below="@id/UserPassword"
            android:layout_height="wrap_content"/>



<TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_15sdp"
          android:text="Create New  User Account"
          android:gravity="center"
          android:textSize="@dimen/_15sdp"
          android:id="@+id/Text_1"
          android:layout_below="@id/UserLogIn"/>









    <Button android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:id="@+id/UserLogUp"
            android:text="Log Up"
            android:onClick="LogUpClicked"
            android:layout_below="@id/Text_1"
            android:layout_height="wrap_content"/>




</RelativeLayout>