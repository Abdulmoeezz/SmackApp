<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">





    <TextView
            android:id="@+id/Add_channel_heading"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="Add Channel"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
        />


    <EditText
        android:layout_below="@id/Add_channel_heading"
        android:id="@+id/Channelnameedt"
            android:inputType="text"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_150sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_height="wrap_content"
        android:hint="Channel Name"/>


    <EditText
            android:layout_below="@id/Channelnameedt"
            android:layout_centerHorizontal="true"
            android:id="@+id/ChannelDescription"
            android:inputType="text"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:hint="Channel Description"/>

</RelativeLayout>